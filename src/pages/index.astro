---
import { getCollection } from "astro:content";

import BaseLayout from "@/layouts/Base";
import ListPosts from "@/components/ListPosts";

const posts = await getCollection("posts");

export const title = "Home";
---

<BaseLayout>
  <section>
    <h1>Hi, I'm Aayush</h1>
    <div>
      <p>web enthusiast.</p>
      <p>
        experienced in
        <a href="https://react.dev/" class="link">reactjs</a>,
        <a href="https://nextjs.org/" class="link">nextjs</a>,
        <a href="https://kit.svelte.dev/" class="link">sveltekit</a> and
        <a href="https://astro.build/" class="link">astro</a>.
      </p>
    </div>
  </section>

  <section>
    <h2>Recent Posts</h2>
    <ListPosts {posts} limit={5} />
  </section>
</BaseLayout>
